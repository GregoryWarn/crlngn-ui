<menu class="contents">
  {{#each folders}}
  <li class="nav-item crlngn-folder" data-folder-id="{{this.id}}">
    <div class="folder-item" data-folder-id="{{this.id}}">
      <i class="fa-solid"></i>
      <span class="folder-name ellipsis">{{this.name}}</span>
    </div>
  </li>
  {{/each}}
  
  {{#each scenes}}
  <li class="nav-item scene on-folder 
  gm{{#if ../useIcons}} crlngn-icons{{/if}}
  {{#if this.active}} active{{/if}}
  {{#if this.isView}} view{{/if}}" 

  data-scene-id="{{this.id}}">
    <a class="scene-name ellipsis"> {{this.name}} </a>
    {{> "modules/crlngn-ui/templates/scene-nav-preview.hbs" scene=this}}
  </li>
  {{/each}}
</menu>