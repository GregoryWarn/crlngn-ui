<div class="scene-preview" data-scene-id="{{id}}" 
  style="background-image: url({{#if thumb}}{{thumb}}{{else}}''{{/if}})">
  
  <div class="icons">
    {{!-- global ilumination icon --}}
    {{#if environment.globalLight.enabled }}
    <i class="fa-solid fa-lightbulb-on ilum" data-tooltip="Global illumination is on"></i>
    {{else}}
    <i class="fa-solid fa-lightbulb-slash ilum" data-tooltip="Global illumination is off"></i>
    {{/if}}

    {{!-- Token vision icon --}}
    {{#if tokenVision }}
    <i class="fa-solid fa-user token-vision" data-tooltip="Token Vision is on"></i>
    {{else}}
    <i class="fa-solid fa-user-slash token-vision" data-tooltip="Token Vision is off"></i>
    {{/if}}

    {{!-- sound icon --}}
    {{#if playlistSound }}
      {{#if playlistSound.sound.playing }}
      <i class="fa-solid fa-music sound" data-tooltip="Playlist sound is on"></i>
      {{else}}
      <i class="fa-solid fa-music-slash sound" data-tooltip="Playlist sound is off"></i>
      {{/if}}
    {{/if}}

    {{!-- config icon --}}
    <i class="fas fa-cog config" data-tooltip="Scene Configuration"></i>
  </div>
</div>