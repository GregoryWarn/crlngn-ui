<section
  class="form-content tab {{#if tab.active}} active{{/if}}" data-group="{{tab.group}}" data-tab="{{tab.id}}"
>
  <h4>
    <i class="fas fa-user"></i> {{localize "CRLNGN_UI.ui.worldSettingsLabel"}} <span class="toggle-hint">{{localize 'CRLNGN_UI.ui.toggleHints'}}</span>
  </h4>
  <hr/>

  <p class="hint">{{localize "CRLNGN_UI.settings.playersListMenu.hint"}}</p>

  {{#if isGM}}
    <div class="form-group">
      <label for="applyThemeAndStyles">{{fields.applyThemeAndStyles.label}}</label>
      <input type="checkbox" name="applyThemeAndStyles" {{#if applyThemeAndStyles}}checked{{/if}} />
      <p class="hint">{{fields.applyThemeAndStyles.hint}}</p> 
    </div>
  {{/if}}
  <p>&nbsp;</p>

  <h4>
    <i class="fas fa-user"></i> {{localize "CRLNGN_UI.ui.clientSettingsLabel"}}
  </h4>
  <hr/>
  <div class="form-group">
    <label for="useHorizontalTabs">{{fields.useHorizontalTabs.label}}</label>
    <input type="checkbox" name="useHorizontalTabs" {{#if useHorizontalTabs}}checked{{/if}} />
    <p class="hint">{{fields.useHorizontalTabs.hint}}</p>
  </div>
</section>